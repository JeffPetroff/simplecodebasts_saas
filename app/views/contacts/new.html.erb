<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="well">
            <%= form_for @contact do |f| %>
                <div class="form-group">      
                    <%= f.label :name %>
                    <%= f.text_field :name %>
                 </div> 
                 
                 <div class="form-group">      
                    <%= f.label :email %>
                    <%= f.email_field :email %>
                 </div>
                 
                 <div class="form-group">      
                    <%= f.label :comments %>
                    <%= f.text_area :comments %>
                </div>
                
                <div class="btn btn-default">
                    <%= f.submit 'Submit' %>
                </div>
     
            <% end %>
       </div>
    </div>
</div>